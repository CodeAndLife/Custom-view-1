<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".MainActivity"
    xmlns:app= "http://schemas.android.com/apk/res-auto"
    >

    <com.example.android.customviewp1.DurationTextView
        android:id="@+id/durationview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:template="%s was spent running"/>

    <com.example.android.customviewp1.DurationTextView
        android:id="@+id/durationview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:template="%s was spent cycling"/>

    <com.example.android.customviewp1.DurationTextView
        android:id="@+id/durationview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:template="%s was spent walking"/>

    <com.example.android.customviewp1.DurationTextView
        android:id="@+id/durationview4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.example.android.customviewp1.DurationTextView
        android:id="@+id/durationview5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>
